<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stiangrim.hangman.Home">

    <ImageView
        android:id="@+id/flag_norway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/flag_of_norway"
        android:onClick="setLanguageToNorwegian"
        app:layout_constraintRight_toLeftOf="@+id/flag_united_kingdom"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flag_norway" />

    <ImageView
        android:id="@+id/flag_united_kingdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/flag_of_united_kingdom"
        android:onClick="setLanguageToEnglish"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flag_united_kingdom" />


    <TextView
        android:id="@+id/new_game_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="57dp" />

    <Button
        android:id="@+id/_1_player_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="110dp"
        android:onClick="startNewGame"
        android:text="@string/_1_player_button"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/new_game_text"
        android:layout_marginLeft="213dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/twoPlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="110dp"
        android:onClick="goTo2Player"
        android:text="@string/_2_player_button"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/new_game_text"
        app:layout_constraintLeft_toRightOf="@+id/_1_player_button"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/rules_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="110dp"
        android:onClick="goToRules"
        android:text="@string/rules"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/_1_player_button"
        android:layout_marginLeft="213dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/statistics_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="110dp"
        android:text="@string/statistics"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/twoPlayerButton"
        app:layout_constraintLeft_toRightOf="@+id/rules_button"
        android:layout_marginLeft="30dp" />


</android.support.constraint.ConstraintLayout>
