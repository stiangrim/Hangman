<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.stiangrim.hangman.Home">

    <ImageView
        android:id="@+id/flag_norway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/flag_of_norway"
        android:onClick="setLanguageToNorwegian"
        app:layout_constraintRight_toLeftOf="@+id/flag_united_kingdom"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flag_norway"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/flag_united_kingdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/flag_of_united_kingdom"
        android:onClick="setLanguageToEnglish"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flag_united_kingdom"
        android:layout_marginEnd="16dp" />


    <Button
        android:id="@+id/new_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:width="250dp"
        android:height="60dp"
        android:background="@color/colorSecondary"
        android:onClick="goToGameActivity"
        android:text="@string/new_game"
        android:textSize="22sp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rules_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:width="250dp"
        android:height="60dp"
        android:background="@color/colorSecondary"
        android:onClick="goToRulesActivity"
        android:text="@string/rules"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statistics_button" />

    <Button
        android:id="@+id/statistics_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:width="250dp"
        android:height="60dp"
        android:background="@color/colorSecondary"
        android:onClick="goToStatisticsActivity"
        android:text="@string/statistics"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_game_button" />


</android.support.constraint.ConstraintLayout>
